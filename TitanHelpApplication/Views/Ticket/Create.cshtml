@model TitanHelpApplication.Models.Ticket

@{
    ViewData["Title"] = "Create Ticket";
}

<div class="container mt-4">
    <h1>Create</h1>
    <h4>New Help Desk Ticket</h4>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label font-weight-bold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control" type="datetime-local" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ProblemDescription" class="control-label"></label>
                    <textarea asp-for="ProblemDescription" class="form-control" rows="4" placeholder="Describe the issue in detail..."></textarea>
                    <span asp-validation-for="ProblemDescription" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Status" class="control-label"></label>
                    <select asp-for="Status" class="form-control">
                        <option value="Open">Open</option>
                        <option value="In Progress">In Progress</option>
                        <option value="Resolved">Resolved</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Priority" class="control-label"></label>
                    <select asp-for="Priority" class="form-control"
                            asp-items="Html.GetEnumSelectList<TitanHelpApplication.Models.TicketPriority>()">
                        <option value="">-- Select Priority Level --</option>
                    </select>
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Create Ticket</button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}